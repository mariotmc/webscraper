<%= link_to page, id: dom_id(page), class: "block w-fit bg-gray-50 p-4 rounded-md shadow hover:bg-gray-100" do %>
  <p class="font-bold">
    <%= page.name %>
  </p>

  <div class="font-medium">
    <p class="text-sm text-blue-500"><%= page.url.sub(/^https?:\/\//, "") %></p>
    <%= render partial: "results/result", locals: { result: page.last_result } %>
  </div>
<% end %>
