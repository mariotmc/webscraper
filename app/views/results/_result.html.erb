<%= turbo_frame_tag result do %>
  <% if result.present? %>
    <div class="flex items-center gap-2">
      <span class="flex items-center gap-1 text-sm font-bold <%= result.success ? "text-green-500" : "text-red-500" %>">
        <% if result.success %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
            <path fill-rule="evenodd" d="M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16Zm3.857-9.809a.75.75 0 0 0-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 1 0-1.06 1.061l2.5 2.5a.75.75 0 0 0 1.137-.089l4-5.5Z" clip-rule="evenodd" />
          </svg>
          Found on page
        <% else %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
            <path fill-rule="evenodd" d="M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16ZM8.28 7.22a.75.75 0 0 0-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 1 0 1.06 1.06L10 11.06l1.72 1.72a.75.75 0 1 0 1.06-1.06L11.06 10l1.72-1.72a.75.75 0 0 0-1.06-1.06L10 8.94 8.28 7.22Z" clip-rule="evenodd" />
          </svg>
          Not found on page
        <% end %>
      </span>

      <span class="text-gray-500 text-sm font-medium">
        <%= time_ago_in_words(result.created_at) %> ago
      </span>
    </div>
  <% else %>
    <p class="text-gray-500 text-sm font-medium">No result to display</p>
  <% end %>
<% end %>
